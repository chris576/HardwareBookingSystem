<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Hardware Buchungssystem
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
		{% block stylesheets %}
			{{ encore_entry_script_tags('app_css') }}
		{% endblock %}
	</head>
	<body>
		{% block javascripts_body %}{% endblock %}
		<div class="container-fluid">
			<nav class="navbar navbar-expand-lg navbar-light bg-light row">
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_home') }}">Hauptseite</a>
						</li>
						{% if is_granted('ROLE_ADMIN') %}
							<li class="nav-item">
								<a class="nav-link" href="/admin">Admin-Page</a>
							</li>
						{% endif %}
					</ul>
					<ul class="navbar-nav mr-auto">
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_logout') }}">Ausloggen</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">{{ app.user.email }}</a>
						</li>
					</ul>
				</div>
			</nav>
			<div class="container-fluid my-2 mx-4">
				{% block body %}{% endblock %}
			</div>
		</div>
	</body>
</html>
